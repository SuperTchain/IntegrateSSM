<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lx.dao.UserDao">
    <select id="findAll" resultType="com.lx.model.User">
        select * from test_table
    </select>

    <insert id="addUser">
        insert into test_table(name, number, password) values (#{username},#{number},#{password})
    </insert>

    <select id="findUserByName" resultType="com.lx.model.User">
        select * from test_table where username=#{username}
    </select>
</mapper>