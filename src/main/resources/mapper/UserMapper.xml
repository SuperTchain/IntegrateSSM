<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lx.dao.UserDao">
    <select id="findAll" resultType="com.lx.model.User">
        select * from user
    </select>

    <insert id="addUser" parameterType="com.lx.model.User">
        insert into user (name,password,userdesc,address,phonenumber,emailaddress,hobbys) values(#{name},#{password},#{userdesc},#{address},#{phonenumber},#{emailaddress},#{hobbys})
    </insert>

    <select id="findUserByName" resultType="com.lx.model.User">
        select * from user where name=#{username}
    </select>
</mapper>